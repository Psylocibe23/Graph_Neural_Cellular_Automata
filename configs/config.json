{
  "data": {
    "emojis_dir": "data/emojis",
    "targets": [
      "bacteria.png",
      "heart.png",
      "gecko.png",
      "tooth.png",
      "star.png",
      "smile.png",
      "four_leaf_clover.png",
      "squid.png",
      "eye.png",
      "real_gecko.png"
    ],
    "active_target": "gecko.png",
    "img_size": 40
  },

  "model": {
    "n_channels": 16,
    "perception": {
      "sobel": true,
      "identity": true
    },
    "update_mlp": {
      "hidden_dim": 128,
      "layers": 2
    },
    "layer_norm": false,
    "fire_rate": 0.5
  },

  "training": {
    "pool_size": 1024,
    "batch_size": 16,
    "steps_per_epoch": 1000,
    "nca_steps_min": 64,
    "nca_steps_max": 96,
    "num_epochs": 1000,
    "learning_rate": 0.001,
    "optimizer": "Adam",
    "weight_decay": 1e-5,
    "scheduler": null,
    "gradient_clip": 1.0,
    "loss": "mse",
    "damage_patch_size": 10
  },

  "logging": {
    "checkpoint_interval_epochs": 25,
    "log_interval": 500,
    "save_interval": 1000,
    "results_dir": "outputs",
    "checkpoint_dir": "outputs/checkpoints",
    "visualize_interval": 1000
  },

  "misc": {
    "device": "cuda",
    "seed": 42,
    "num_workers": 8
  },

  "graph_augmentation": {
    "d_model": 16,
    "attention_radius": 3,
    "num_neighbors": 8,
    "gating_hidden": 32
  }
}
